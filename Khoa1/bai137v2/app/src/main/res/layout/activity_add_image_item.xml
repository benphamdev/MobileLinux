<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddImageItem">

    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            app:layout_constraintTop_toBottomOf="@+id/imageBtn_res"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toEndOf="@+id/button_add"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Add Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText_name_item"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Name Item" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_name_item"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hint="Description " />

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/imageBtn_cam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/editText_description"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.096"
            android:background="@null" />

    <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@android:drawable/editbox_dropdown_light_frame"
            android:id="@+id/imageBtn_res"
            app:layout_constraintTop_toBottomOf="@+id/editText_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="140dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:scaleType="fitXY"
            android:background="@null" />

    <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/folder"
            android:id="@+id/imageBtn_folder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_description"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.951"
            android:scaleType="fitXY"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_add"
            app:layout_constraintTop_toBottomOf="@+id/imageBtn_res"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213" />
</androidx.constraintlayout.widget.ConstraintLayout>